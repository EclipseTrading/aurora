<UserControl x:Class="Aurora.Core.ViewContainer.ContentContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Core.ViewContainer"
             xmlns:dialog="clr-namespace:Aurora.Core.Dialog"
             mc:Ignorable="d" 
          d:DesignHeight="300" d:DesignWidth="300" Background="Transparent">

    <Grid>
        <ContentControl x:Name="MainContent" Content="{Binding MainContent}">
        </ContentControl>

        <dialog:DialogControl x:Name="DialogContent" Content="{Binding DialogContent}" IsOpen="{Binding Path=IsOpenDialog}">
        </dialog:DialogControl>


    </Grid>
</UserControl>
